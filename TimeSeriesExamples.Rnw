pl <- Fore$f + qnorm(0.05, sd = fsd)
pu <- Fore$f + qnorm(0.95, sd = fsd)
fc <- list(mean=Fore$f, lower=pl, upper=pu,
x=shef_ts, level=95)
plot.forecast(fc, main="Temperature (Forecast)")
@

